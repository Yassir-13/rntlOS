<Window x:Class="rntlOS.BackOffice.Views.AjouterClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un client" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Nouveau client" 
                   Foreground="White"
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Formulaire avec ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">

                <TextBlock Text="Nom" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtNom" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Prénom" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtPrenom" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Email" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtEmail" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Téléphone" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtTelephone" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Mot de passe" FontWeight="SemiBold"/>
                <PasswordBox x:Name="TxtPassword" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Confirmer le mot de passe" FontWeight="SemiBold"/>
                <PasswordBox x:Name="TxtConfirmPassword" Padding="8" Margin="0,0,0,10"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Annuler" 
                    Click="Annuler_Click"
                    Width="100"
                    Padding="10"
                    Margin="0,0,10,0"/>

            <Button Content="Enregistrer" 
                    Click="Enregistrer_Click"
                    Background="#007ACC"
                    Foreground="White"
                    Width="100"
                    Padding="10"/>
        </StackPanel>

    </Grid>
</Window>