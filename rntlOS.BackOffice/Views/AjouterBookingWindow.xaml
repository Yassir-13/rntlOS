<Window x:Class="rntlOS.BackOffice.Views.AjouterBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouvelle réservation" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Nouvelle réservation" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">

                <TextBlock Text="Client" FontWeight="SemiBold"/>
                <ComboBox x:Name="CmbClient" 
                          SelectedValuePath="Id"
                          Padding="8"
                          Margin="0,0,0,10">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Prenom}"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding Nom}"/>
                                <TextBlock Text=" - " FontStyle="Italic"/>
                                <TextBlock Text="{Binding Email}" FontStyle="Italic"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Véhicule" FontWeight="SemiBold"/>
                <ComboBox x:Name="CmbVehicule" 
                          SelectedValuePath="Id"
                          Padding="8"
                          Margin="0,0,0,10"
                          SelectionChanged="CmbVehicule_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding Marque}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding Modele}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding PrixParJour, StringFormat={}{0:C}}" FontWeight="Bold"/>
                                <Run Text="/jour"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Date de début" FontWeight="SemiBold"/>
                <DatePicker x:Name="DtpDateDebut" 
                            Padding="8" 
                            Margin="0,0,0,10"
                            SelectedDateChanged="CalculerPrixTotal"/>

                <TextBlock Text="Date de fin" FontWeight="SemiBold"/>
                <DatePicker x:Name="DtpDateFin" 
                            Padding="8" 
                            Margin="0,0,0,10"
                            SelectedDateChanged="CalculerPrixTotal"/>

                <Border Background="#F0F0F0" 
                        Padding="15" 
                        CornerRadius="5"
                        Margin="0,10,0,10">
                    <StackPanel>
                        <TextBlock Text="Récapitulatif" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Nombre de jours : " FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtNbJours" Text="0" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Prix par jour : " FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtPrixParJour" Text="0.00 MAD" FontWeight="Bold"/>
                        </StackPanel>

                        <Separator Margin="0,5"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Prix Total : " FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="TxtPrixTotal" 
                                       Text="0.00 MAD" 
                                       FontWeight="Bold" 
                                       FontSize="18"
                                       Foreground="#007ACC"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Text="Statut" FontWeight="SemiBold"/>
                <ComboBox x:Name="CmbStatut" 
                          Padding="8"
                          Margin="0,0,0,10"
                          SelectedIndex="0">
                    <ComboBoxItem Content="En Attente"/>
                    <ComboBoxItem Content="Confirmée"/>
                    <ComboBoxItem Content="Annulée"/>
                    <ComboBoxItem Content="Terminée"/>
                </ComboBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Annuler" 
                    Click="Annuler_Click"
                    Width="100"
                    Padding="10"
                    Margin="0,0,10,0"/>

            <Button Content="Enregistrer" 
                    Click="Enregistrer_Click"
                    Background="#007ACC"
                    Foreground="White"
                    Width="100"
                    Padding="10"/>
        </StackPanel>

    </Grid>
</Window>