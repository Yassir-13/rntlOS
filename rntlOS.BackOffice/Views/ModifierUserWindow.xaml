<Window x:Class="rntlOS.BackOffice.Views.ModifierUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier un employé" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Modifier l'employé" 
                   Foreground="White"
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">

                <TextBlock Text="Nom" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtNom" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Prénom" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtPrenom" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Email" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtEmail" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Nouveau mot de passe (laisser vide pour ne pas changer)" FontWeight="SemiBold"/>
                <PasswordBox x:Name="TxtPassword" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Confirmer le nouveau mot de passe" FontWeight="SemiBold"/>
                <PasswordBox x:Name="TxtConfirmPassword" Padding="8" Margin="0,0,0,10"/>

                <TextBlock Text="Rôle" FontWeight="SemiBold"/>
                <ComboBox x:Name="CmbRole" 
                          Padding="8"
                          Margin="0,0,0,10">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Employee"/>
                </ComboBox>

                <CheckBox x:Name="ChkActif" 
                          Content="Compte actif"
                          Margin="0,0,0,10"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Annuler" 
                    Click="Annuler_Click"
                    Width="100"
                    Padding="10"
                    Margin="0,0,10,0"/>

            <Button Content="Enregistrer" 
                    Click="Enregistrer_Click"
                    Background="#007ACC"
                    Foreground="White"
                    Width="100"
                    Padding="10"/>
        </StackPanel>

    </Grid>
</Window>