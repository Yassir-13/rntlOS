<Window x:Class="rntlOS.BackOffice.Views.GererImagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gérer les images du véhicule" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock x:Name="TxtTitre"
                   Text="Gérer les images" 
                   Foreground="White"
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Boutons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="📁 Ajouter une image"
                    Click="AjouterImage_Click"
                    Background="#007ACC"
                    Foreground="White"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>

            <Button Content="🗑️ Supprimer l'image"
                    Click="SupprimerImage_Click"
                    Background="#DC3545"
                    Foreground="White"
                    Padding="15,8"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Liste des images -->
        <ListBox x:Name="ImagesListBox"
                 Grid.Row="2"
                 SelectionMode="Single"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#CCC" 
                            BorderThickness="2" 
                            Margin="10"
                            CornerRadius="8">
                        <Image Source="{Binding ImagePath}" 
                               Width="200" 
                               Height="150" 
                               Stretch="UniformToFill"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>