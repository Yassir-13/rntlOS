<UserControl x:Class="rntlOS.BackOffice.Views.MaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Gestion de la Maintenance"
                   Foreground="White"
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Alertes -->
        <Border Grid.Row="1" 
                x:Name="AlertesBorder"
                Background="#FFF3CD"
                BorderBrush="#FFC107"
                BorderThickness="2"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15"
                Visibility="Collapsed">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="⚠️" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="ALERTES MAINTENANCE" 
                               FontWeight="Bold" 
                               FontSize="16"
                               Foreground="#856404"/>
                </StackPanel>
                <TextBlock x:Name="TxtAlertes" 
                           TextWrapping="Wrap"
                           Foreground="#856404"/>
            </StackPanel>
        </Border>

        <!-- Bouton Ajouter -->
        <Button Grid.Row="2"
                Content="+ Planifier une maintenance"
                Click="AjouterMaintenance_Click"
                Background="#007ACC"
                Foreground="White"
                Padding="15,8"
                FontSize="14"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                Cursor="Hand"/>

        <!-- DataGrid -->
        <DataGrid x:Name="MaintenancesDataGrid"
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Véhicule" Binding="{Binding Vehicule.Marque}" Width="*"/>
                <DataGridTextColumn Header="Modèle" Binding="{Binding Vehicule.Modele}" Width="*"/>
                <DataGridTextColumn Header="Matricule" Binding="{Binding Vehicule.Matricule}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DateMaintenance, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                <DataGridTextColumn Header="Kilométrage" Binding="{Binding KilometrageAtMaintenance, StringFormat={}{0:N0}}" Width="*"/>
                <DataGridTextColumn Header="Prochaine" Binding="{Binding ProchaineMaintenance, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                <DataGridCheckBoxColumn Header="Complétée" Binding="{Binding IsCompleted}" Width="Auto"/>

                <!-- Colonne Actions -->
                <DataGridTemplateColumn Header="Actions" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="✅ Terminer"
                                        Click="TerminerMaintenance_Click"
                                        Background="#28A745"
                                        Foreground="White"
                                        Padding="6,3"
                                        Margin="0,0,3,0"
                                        Cursor="Hand"
                                        BorderThickness="0"/>
                                <Button Content="✏️ Modifier"
                                        Click="ModifierMaintenance_Click"
                                        Background="#FFC107"
                                        Foreground="White"
                                        Padding="6,3"
                                        Margin="0,0,3,0"
                                        Cursor="Hand"
                                        BorderThickness="0"/>
                                <Button Content="🗑️ Supprimer"
                                        Click="SupprimerMaintenance_Click"
                                        Background="#DC3545"
                                        Foreground="White"
                                        Padding="6,3"
                                        Cursor="Hand"
                                        BorderThickness="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>