<Window x:Class="rntlOS.BackOffice.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion - rntlOS BackOffice" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E24"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="10" BorderBrush="#5E81AC" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#252530" CornerRadius="10,10,0,0" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="rntl" 
                                   FontSize="36" 
                                   Foreground="White" 
                                   FontWeight="Light"/>
                        <TextBlock Text="OS" 
                                   FontSize="36" 
                                   Foreground="#5E81AC" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                    <TextBlock Text="BackOffice" 
                               FontSize="14" 
                               Foreground="#A0A0A0"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Form -->
            <StackPanel Grid.Row="1" Margin="40,40,40,40">

                <TextBlock Text="CONNEXION" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Email" 
                           FontWeight="SemiBold"
                           Foreground="#A0A0A0"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="TxtEmail" 
                         Padding="12"
                         FontSize="14"
                         Margin="0,0,0,20"
                         Background="#2A2A35"
                         Foreground="White"
                         BorderBrush="#404050"
                         BorderThickness="1"/>

                <TextBlock Text="Mot de passe" 
                           FontWeight="SemiBold"
                           Foreground="#A0A0A0"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="TxtPassword" 
                             Padding="12"
                             FontSize="14"
                             Margin="0,0,0,30"
                             Background="#2A2A35"
                             Foreground="White"
                             BorderBrush="#404050"
                             BorderThickness="1"/>

                <Button Content="SE CONNECTER" 
                        Click="Connexion_Click"
                        Background="#5E81AC"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Padding="0,15,0,15"
                        Cursor="Hand"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Annuler" 
                        Click="Annuler_Click"
                        Background="Transparent"
                        Foreground="#A0A0A0"
                        FontSize="12"
                        Padding="0,10,0,10"
                        Cursor="Hand"
                        BorderThickness="0"
                        Margin="0,10,0,0"/>

            </StackPanel>

        </Grid>
    </Border>
</Window>