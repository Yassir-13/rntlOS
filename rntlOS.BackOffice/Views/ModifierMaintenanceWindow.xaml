<Window x:Class="rntlOS.BackOffice.Views.ModifierMaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier la maintenance" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Modifier la maintenance" 
                   Foreground="White"
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">

                <TextBlock Text="Véhicule" FontWeight="SemiBold"/>
                <TextBlock x:Name="TxtVehicule" 
                           Text="" 
                           Padding="8"
                           Background="#F0F0F0"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Description de la maintenance" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtDescription" 
                         Padding="8" 
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Date de la maintenance" FontWeight="SemiBold"/>
                <DatePicker x:Name="DtpDateMaintenance" 
                            Padding="8" 
                            Margin="0,0,0,10"/>

                <TextBlock Text="Kilométrage" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtKilometrage" 
                         Padding="8" 
                         Margin="0,0,0,10"/>

                <TextBlock Text="Prochaine maintenance prévue (optionnel)" FontWeight="SemiBold"/>
                <DatePicker x:Name="DtpProchaineMaintenance" 
                            Padding="8" 
                            Margin="0,0,0,10"/>

                <CheckBox x:Name="ChkCompleted" 
                          Content="Maintenance effectuée"
                          Margin="0,0,0,10"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Annuler" 
                    Click="Annuler_Click"
                    Width="100"
                    Padding="10"
                    Margin="0,0,10,0"/>

            <Button Content="Enregistrer" 
                    Click="Enregistrer_Click"
                    Background="#007ACC"
                    Foreground="White"
                    Width="100"
                    Padding="10"/>
        </StackPanel>

    </Grid>
</Window>