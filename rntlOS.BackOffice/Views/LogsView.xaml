<UserControl x:Class="rntlOS.BackOffice.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Fichiers Logs" 
                   Foreground="White"
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="ðŸ”„ Actualiser"
                    Click="Actualiser_Click"
                    Background="#007ACC"
                    Foreground="White"
                    Padding="15,8"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>
            <Button Content="ðŸ“‚ Ouvrir dossier"
                    Click="OuvrirDossier_Click"
                    Background="#28A745"
                    Foreground="White"
                    Padding="15,8"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>
            <Button Content="ðŸ—‘ï¸ Effacer logs anciens"
                    Click="EffacerLogs_Click"
                    Background="#DC3545"
                    Foreground="White"
                    Padding="15,8"
                    FontSize="14"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Contenu logs -->
        <Border Grid.Row="2" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1"
                CornerRadius="8"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="TxtLogs"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="#1E1E1E"
                         Foreground="#D4D4D4"
                         BorderThickness="0"
                         Padding="10"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
