<Window x:Class="rntlOS.BackOffice.Views.AjouterPaiementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enregistrer un paiement" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Enregistrer un paiement" 
                   Foreground="White"
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">

                <TextBlock Text="Réservation" FontWeight="SemiBold"/>
                <TextBlock x:Name="TxtReservation" 
                           Text="" 
                           Padding="8"
                           Background="#F0F0F0"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Montant à payer (MAD)" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtMontant" 
                         Padding="8" 
                         Margin="0,0,0,10"
                         FontSize="16"
                         FontWeight="Bold"/>

                <TextBlock Text="Méthode de paiement" FontWeight="SemiBold"/>
                <ComboBox x:Name="CmbMethode" 
                          Padding="8"
                          Margin="0,0,0,10"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Carte Bancaire"/>
                    <ComboBoxItem Content="Espèces"/>
                    <ComboBoxItem Content="Virement"/>
                </ComboBox>

                <TextBlock Text="Statut" FontWeight="SemiBold"/>
                <ComboBox x:Name="CmbStatut" 
                          Padding="8"
                          Margin="0,0,0,10"
                          SelectedIndex="0">
                    <ComboBoxItem Content="En Attente"/>
                    <ComboBoxItem Content="Réussi"/>
                    <ComboBoxItem Content="Échoué"/>
                </ComboBox>

                <TextBlock Text="Date du paiement" FontWeight="SemiBold"/>
                <DatePicker x:Name="DtpDatePaiement" 
                            Padding="8" 
                            Margin="0,0,0,10"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Annuler" 
                    Click="Annuler_Click"
                    Width="100"
                    Padding="10"
                    Margin="0,0,10,0"/>

            <Button Content="Enregistrer" 
                    Click="Enregistrer_Click"
                    Background="#007ACC"
                    Foreground="White"
                    Width="100"
                    Padding="10"/>
        </StackPanel>

    </Grid>
</Window>