<Window x:Class="rntlOS.BackOffice.Views.AjouterMaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Planifier une maintenance" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Planifier une maintenance" 
                   Foreground="White"
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">

                <TextBlock Text="Véhicule" FontWeight="SemiBold"/>
                <ComboBox x:Name="CmbVehicule" 
                          SelectedValuePath="Id"
                          Padding="8"
                          Margin="0,0,0,10">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Marque}"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding Modele}"/>
                                <TextBlock Text=" - "/>
                                <TextBlock Text="{Binding Matricule}" FontWeight="Bold"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Description de la maintenance" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtDescription" 
                         Padding="8" 
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Date de la maintenance" FontWeight="SemiBold"/>
                <DatePicker x:Name="DtpDateMaintenance" 
                            Padding="8" 
                            Margin="0,0,0,10"/>

                <TextBlock Text="Kilométrage actuel" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtKilometrage" 
                         Padding="8" 
                         Margin="0,0,0,10"/>

                <TextBlock Text="Prochaine maintenance prévue (optionnel)" FontWeight="SemiBold"/>
                <DatePicker x:Name="DtpProchaineMaintenance" 
                            Padding="8" 
                            Margin="0,0,0,10"/>

                <CheckBox x:Name="ChkCompleted" 
                          Content="Maintenance déjà effectuée"
                          Margin="0,0,0,10"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">

            <Button Content="Annuler" 
                    Click="Annuler_Click"
                    Width="100"
                    Padding="10"
                    Margin="0,0,10,0"/>

            <Button Content="Enregistrer" 
                    Click="Enregistrer_Click"
                    Background="#007ACC"
                    Foreground="White"
                    Width="100"
                    Padding="10"/>
        </StackPanel>

    </Grid>
</Window>