<Window x:Class="rntlOS.BackOffice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="rntlOS - BackOffice" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1E1E24"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="20,0,0,0">
                            <ContentPresenter HorizontalAlignment="Left" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#32323E"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C82333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#252530" Offset="0.0"/>
                    <GradientStop Color="#1A1A20" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Margin="20,40,20,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="rntl" FontSize="32" Foreground="White" FontWeight="Light"/>
                        <TextBlock Text="OS" FontSize="32" Foreground="#5E81AC" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <!-- Menu avec ScrollViewer -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="20,0,20,0">
                    <StackPanel>
                        <TextBlock Text="MENU PRINCIPAL" FontSize="11" Foreground="#555560" FontWeight="Bold" Margin="10,0,0,10"/>

                        <Button Content="Dashboard" Click="OpenDashboard" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Véhicules" Click="OpenVehicules" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Clients" Click="OpenClients" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Réservations" Click="OpenReservations" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Paiements" Click="OpenPaiements" Style="{StaticResource MenuButtonStyle}"/>

                        <TextBlock Text="ADMINISTRATION" FontSize="11" Foreground="#555560" FontWeight="Bold" Margin="10,20,0,10"/>

                        <Button Content="Employés" Click="OpenEmployees" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Maintenance" Click="OpenMaintenance" Style="{StaticResource MenuButtonStyle}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- User Info + Logout -->
                <Border Grid.Row="2" 
                        Background="#16161C" 
                        Padding="20"
                        BorderBrush="#2A2A35" 
                        BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock x:Name="TxtUserName" 
                                   Text="Utilisateur" 
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                        <TextBlock x:Name="TxtUserRole" 
                                   Text="Rôle" 
                                   Foreground="#A0A0A0"
                                   FontSize="11"
                                   Margin="0,3,0,10"/>

                        <Button Content="Déconnexion" 
                                Click="Logout_Click"
                                Style="{StaticResource LogoutButtonStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="#141418">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Tableau de bord" 
                           Grid.Row="0"
                           Foreground="White" 
                           FontSize="24" 
                           VerticalAlignment="Center" 
                           Margin="40,0,0,0"
                           FontWeight="SemiBold"/>

                <ContentControl x:Name="MainContent" 
                                Grid.Row="1" 
                                Margin="40,0,40,40">
                    <Border BorderBrush="#333" BorderThickness="2" CornerRadius="10" Background="#1E1E24">
                        <TextBlock Text="Sélectionnez un menu..." 
                                   Foreground="#555" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</Window>