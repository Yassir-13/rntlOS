<!-- TOGGLE DARK MODE -->
<div class="theme-toggle-container">
    <button class="theme-toggle-btn" @onclick="ToggleTheme">
        @if (isDarkMode)
        {
            <span class="oi oi-sun"></span>
            <span class="ms-2">Mode Clair</span>
        }
        else
        {
            <span class="oi oi-moon"></span>
            <span class="ms-2">Mode Sombre</span>
        }
    </button>
</div>

<style>
    .theme-toggle-container {
        position: absolute;
        bottom: 30px;
        left: 0;
        right: 0;
        padding: 0 20px;
    }

    .theme-toggle-btn {
        width: 100%;
        background: rgba(201, 169, 97, 0.1);
        border: 2px solid #C9A961;
        color: #C9A961;
        padding: 12px 20px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 500;
        letter-spacing: 1px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .theme-toggle-btn:hover {
            background: #C9A961;
            color: #0B1A2E;
            transform: translateY(-2px);
        }
</style>

@code {
    private bool isDarkMode = false;

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;

        if (isDarkMode)
        {
            await JSRuntime.InvokeVoidAsync("eval", "document.body.classList.add('dark-mode')");
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("eval", "document.body.classList.remove('dark-mode')");
        }
    }
}