@page "/Error"
@using System.Diagnostics

<PageTitle>Erreur - rntlOS</PageTitle>

<div class="container mt-5">
    <div class="glass-panel p-5 text-center">
        <h1 class="text-danger mb-4">Erreur</h1>
        <h2 class="text-white mb-4">Une erreur inattendue s'est produite.</h2>
        <p class="text-dim mb-4">Nous nous excusons pour ce désagrément. Veuillez réessayer ultérieurement.</p>

        @if (ShowRequestId)
        {
            <p class="text-dim">
                <strong>Request ID:</strong> <code>@RequestId</code>
            </p>
        }

        <div class="mt-4">
             <a href="/" class="btn btn-primary">Retour à l'accueil</a>
        </div>
    </div>
</div>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}
