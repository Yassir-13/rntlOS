@page "/mes-reservations"
@rendermode InteractiveServer
@using rntlOS.Core.Services
@using rntlOS.Core.Models
@using rntlOS.FrontOffice.Services
@inject BookingService BookingService
@inject AuthenticationStateService AuthService
@inject NavigationManager Navigation

<PageTitle>Mes Réservations - rntlOS</PageTitle>

<div class="container mt-5">
    <div class="row mb-5">
        <div class="col">
            <h1 class="text-gold">Historique</h1>
            <p class="text-dim">Retrouvez toutes vos expériences de conduite.</p>
        </div>
    </div>

    @if (!AuthService.IsAuthenticated)
    {
        <div class="glass-panel p-5 text-center">
            <div class="mb-4">
                <span class="oi oi-lock-locked" style="font-size: 3rem; color: var(--gold-primary);"></span>
            </div>
            <h4 class="text-gold">Espace Privé</h4>
            <p class="text-dim mb-4">Connectez-vous pour accéder à votre historique de réservation.</p>
            <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/login"))">
                Se connecter
            </button>
        </div>
    }
    else if (reservations == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-gold" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
    }
    else if (!reservations.Any())
    {
        <div class="glass-panel p-5 text-center">
            <div class="mb-4">
                <span class="oi oi-list" style="font-size: 3rem; color: var(--text-dim);"></span>
            </div>
            <h4 class="text-gold">Aucune réservation</h4>
            <p class="text-dim mb-4">Vous n'avez pas encore vécu l'expérience rntlOS.</p>
            <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/vehicules"))">
                <span class="oi oi-plus me-2"></span> Nouvelle réservation
            </button>
        </div>
    }
    else
    {
        <div class="glass-panel overflow-hidden">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Véhicule</th>
                            <th>Période</th>
                            <th>Statut</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in reservations.OrderByDescending(b => b.CreatedAt))
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (booking.Vehicule?.Images?.Any() == true)
                                        {
                                            <div class="vehicle-thumb me-3">
                                                 <img src="/Images/@booking.Vehicule.Images.First().ImagePath" 
                                                      class="img-fluid" 
                                                      alt="@booking.Vehicule.Marque" />
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold text-white">@booking.Vehicule?.Marque @booking.Vehicule?.Modele</div>
                                            <small class="text-dim">@booking.Vehicule?.TypeVehicule?.Libelle</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span>@booking.DateDebut.ToString("dd MMMM") - @booking.DateFin.ToString("dd MMMM yyyy")</span>
                                        <small class="text-dim">@((booking.DateFin - booking.DateDebut).Days) jour(s)</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @GetStatutBadgeClass(booking.Status)">
                                        @GetStatutText(booking.Status)
                                    </span>
                                </td>
                                <td class="text-gold fw-bold">
                                    @booking.PrixTotal.ToString("C")
                                </td>
                                <td>
                                    <button class="btn btn-secondary btn-sm" 
                                            @onclick="@(() => VoirDetails(booking.Id))">
                                        <span class="oi oi-eye me-1"></span> Détails
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .vehicle-thumb {
        width: 60px;
        height: 40px;
        overflow: hidden;
        border-radius: 4px;
        background: var(--navy-dark);
    }
    
    .vehicle-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>

@code {
    private List<Booking>? reservations;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated && AuthService.CurrentUser != null)
        {
            reservations = await BookingService.GetByClientIdAsync(AuthService.CurrentUser.Id);
        }
    }

    private string GetStatutText(StatutReservation statut)
    {
        return statut switch
        {
            StatutReservation.EnAttente => "En attente",
            StatutReservation.Confirmee => "Confirmée",
            StatutReservation.Annulee => "Annulée",
            StatutReservation.Terminee => "Terminée",
            _ => "Inconnu"
        };
    }

    private string GetStatutBadgeClass(StatutReservation statut)
    {
        return statut switch
        {
            StatutReservation.EnAttente => "bg-warning",
            StatutReservation.Confirmee => "bg-success",
            StatutReservation.Annulee => "bg-danger",
            StatutReservation.Terminee => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private void VoirDetails(int bookingId)
    {
        Navigation.NavigateTo($"/confirmation?bookingId={bookingId}");
    }
}
