@page "/vehicules"
@rendermode InteractiveServer
@using rntlOS.Core.Services
@using rntlOS.Core.Models
@using System.IO
@inject VehiculeService VehiculeService
@inject TypeVehiculeService TypeVehiculeService
@inject NavigationManager Navigation

<PageTitle>Collection Exclusive - rntlOS</PageTitle>

<div class="container mt-4">
    <div class="row align-items-center mb-5">
        <div class="col">
            <h1 class="text-gold">Notre Flotte</h1>
            <p class="text-dim">Découvrez notre collection de véhicules d'exception.</p>
        </div>
    </div>

    <!-- Filtres Glassmorphism -->
    <div class="glass-panel mb-5 p-4">
        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Type de véhicule</label>
                <select class="form-select" @onchange="FiltrerParType">
                    <option value="">Tous les types</option>
                    @if (typesVehicules != null)
                    {
                        @foreach (var type in typesVehicules)
                        {
                            <option value="@type.Id">@type.Libelle</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Budget max (Journalier)</label>
                <input type="number" class="form-control" @bind="prixMax" @bind:event="oninput" @onchange="AppliquerFiltres" placeholder="Entrez un montant..." />
            </div>
            <div class="col-md-4 mb-3 d-flex align-items-end">
                <button class="btn btn-secondary w-100" @onclick="ReinitialiserFiltres">
                    <span class="oi oi-reload me-2"></span> Réinitialiser
                </button>
            </div>
        </div>
    </div>

    @if (vehiculesFiltres == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-gold" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
    }
    else if (!vehiculesFiltres.Any())
    {
        <div class="alert alert-info">
            <span class="oi oi-info me-2"></span> Aucun véhicule ne correspond à vos critères d'excellence.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var vehicule in PagedVehicles)
            {
                <div class="col-md-4 mb-4" @key="vehicule.Id" style="min-width: 300px;">
                    <div class="card h-100">
                        <!-- Image Container with Overlay -->
                        <div class="vehicle-image-container">
                            @if (vehicule.Images?.Any() == true)
                            {
                                <img src="@GetImagePath(vehicule.Images.First().ImagePath)"
                                     class="vehicle-image"
                                     alt="@vehicule.Marque @vehicule.Modele"
                                     loading="lazy" />
                            }
                            else
                            {
                                <div class="no-image-fallback">
                                    <span class="oi oi-image" style="font-size: 3rem; color: var(--gold-primary);"></span>
                                    <p class="mt-2 text-gold">Image non disponible</p>
                                </div>
                            }
                            <div class="image-overlay">
                                <span class="badge">Disponible</span>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@vehicule.Marque @vehicule.Modele</h5>
                            
                            <div class="vehicle-specs mb-3">
                                <div class="spec-item">
                                    <span class="oi oi-tag text-gold"></span> 
                                    <span class="text-dim ms-2">@vehicule.TypeVehicule?.Libelle</span>
                                </div>
                                <div class="spec-item">
                                    <span class="oi oi-dashboard text-gold"></span>
                                    <span class="text-dim ms-2">@vehicule.Kilometrage.ToString("N0") km</span>
                                </div>
                            </div>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price-tag text-gold" style="font-size: 1.2rem; font-weight: 700;">
                                        @vehicule.PrixParJour.ToString("C") <small class="text-dim" style="font-size: 0.8rem; font-weight: 400;">/ jour</small>
                                    </span>
                                </div>
                                <button class="btn btn-primary w-100" @onclick="() => ReserverVehicule(vehicule.Id)">
                                    <span class="oi oi-check me-2"></span> Réserver
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination Controls -->
        @if (TotalPages > 1)
        {
            <div class="d-flex justify-content-center mt-5 mb-5">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-luxury">
                        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="PreviousPage" aria-label="Précédent">
                                <span aria-hidden="true">&laquo;</span>
                            </button>
                        </li>
                        
                        @for (int i = 1; i <= TotalPages; i++)
                        {
                            var pageNumber = i;
                            <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                                <button class="page-link" @onclick="() => GoToPage(pageNumber)">@pageNumber</button>
                            </li>
                        }

                        <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="NextPage" aria-label="Suivant">
                                <span aria-hidden="true">&raquo;</span>
                            </button>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    }
</div>

<style>
    /* Specific styles for vehicle cards if needed, augmenting theme.css */
    .vehicle-image-container {
        position: relative;
        height: 220px;
        background: var(--navy-dark);
        overflow: hidden;
    }
    
    .vehicle-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .card:hover .vehicle-image {
        transform: scale(1.05);
    }
    
    .no-image-fallback {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: rgba(212, 175, 55, 0.05);
    }
    
    .image-overlay {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    /* Pagination Luxury */
    .pagination-luxury {
        gap: 5px;
    }
    
    .pagination-luxury .page-link {
        background: transparent;
        border: 1px solid rgba(212, 175, 55, 0.3);
        color: var(--text-dim);
        border-radius: 4px;
        padding: 0.5rem 1rem;
    }
    
    .pagination-luxury .page-link:hover {
        background: rgba(212, 175, 55, 0.1);
        color: var(--gold-primary);
        border-color: var(--gold-primary);
    }
    
    .pagination-luxury .page-item.active .page-link {
        background: var(--gold-primary);
        color: var(--navy-dark);
        border-color: var(--gold-primary);
    }
    
    .pagination-luxury .page-item.disabled .page-link {
        opacity: 0.5;
        cursor: not-allowed;
        border-color: rgba(255,255,255,0.1);
    }
</style>

@code {
    private List<Vehicule> tousVehicules;
    private List<Vehicule> vehiculesFiltres;
    private List<TypeVehicule> typesVehicules;
    private int? typeSelectionne;
    private decimal? prixMax;

    // Pagination
    private int PageSize = 6;
    private int CurrentPage = 1;
    
    private int TotalPages => vehiculesFiltres == null ? 0 : (int)Math.Ceiling((double)vehiculesFiltres.Count / PageSize);
    
    private IEnumerable<Vehicule> PagedVehicles => vehiculesFiltres?
        .Skip((CurrentPage - 1) * PageSize)
        .Take(PageSize) ?? Enumerable.Empty<Vehicule>();

    protected override async Task OnInitializedAsync()
    {
        var all = await VehiculeService.GetAllAsync();
        tousVehicules = all.Where(v => v.Disponible).ToList();
        vehiculesFiltres = tousVehicules;
        typesVehicules = await TypeVehiculeService.GetAllAsync();
    }

    private void FiltrerParType(ChangeEventArgs e)
    {
        typeSelectionne = string.IsNullOrEmpty(e.Value?.ToString()) ? null : int.Parse(e.Value.ToString());
        AppliquerFiltres();
    }

    private void AppliquerFiltres()
    {
        vehiculesFiltres = tousVehicules;

        if (typeSelectionne.HasValue)
        {
            vehiculesFiltres = vehiculesFiltres.Where(v => v.TypeVehiculeId == typeSelectionne.Value).ToList();
        }

        if (prixMax.HasValue)
        {
            vehiculesFiltres = vehiculesFiltres.Where(v => v.PrixParJour <= prixMax.Value).ToList();
        }
        
        // Reset to page 1 on filter change
        CurrentPage = 1;
        StateHasChanged();
    }

    private void ReinitialiserFiltres()
    {
        typeSelectionne = null;
        prixMax = null;
        vehiculesFiltres = tousVehicules;
        CurrentPage = 1;
        StateHasChanged();
    }

    private void ReserverVehicule(int vehiculeId)
    {
        Navigation.NavigateTo($"/reserver/{vehiculeId}");
    }

    private string GetImagePath(string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath))
            return "/images/no-image.png";

        return $"/Images/{imagePath}";
    }

    // Pagination specific methods
    private void NextPage()
    {
        if (CurrentPage < TotalPages)
        {
            CurrentPage++;
        }
    }

    private void PreviousPage()
    {
        if (CurrentPage > 1)
        {
            CurrentPage--;
        }
    }

    private void GoToPage(int page)
    {
        CurrentPage = page;
    }
}
