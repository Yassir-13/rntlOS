@page "/vehicules"
@rendermode InteractiveServer
@using rntlOS.Core.Services
@using rntlOS.Core.Models
@using System.IO
@inject VehiculeService VehiculeService
@inject TypeVehiculeService TypeVehiculeService
@inject NavigationManager Navigation

<PageTitle>Nos véhicules - rntlOS</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Nos véhicules disponibles</h1>

    <!-- Filtres -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label>Type de véhicule</label>
                    <select class="form-select" @onchange="FiltrerParType">
                        <option value="">Tous les types</option>
                        @if (typesVehicules != null)
                        {
                            @foreach (var type in typesVehicules)
                            {
                                <option value="@type.Id">@type.Libelle</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Prix maximum par jour</label>
                    <input type="number" class="form-control" @bind="prixMax" @bind:event="oninput" @onchange="AppliquerFiltres" placeholder="Prix max" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="ReinitialiserFiltres">
                        Réinitialiser
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (vehiculesFiltres == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
        </div>
    }
    else if (!vehiculesFiltres.Any())
    {
        <div class="alert alert-info">
            Aucun véhicule ne correspond à vos critères.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var vehicule in vehiculesFiltres)
            {
                <div class="col-md-4 mb-4" @key="vehicule.Id">
                    <div class="card vehicle-card">
                        <div class="vehicle-image-container">
                            @if (vehicule.Images?.Any() == true)
                            {
                                <img src="@GetImagePath(vehicule.Images.First().ImagePath)"
                                     class="vehicle-image"
                                     alt="@vehicule.Marque @vehicule.Modele"
                                     loading="lazy" />
                                <div class="image-overlay">
                                    <div class="overlay-content">
                                        <span class="oi oi-eye"></span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="no-image-fallback">
                                    <span class="oi oi-image"></span>
                                    <p>Image non disponible</p>
                                </div>
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@vehicule.Marque @vehicule.Modele</h5>
                            <p class="card-text">
                                <span class="info-item"><span class="oi oi-tag"></span> @vehicule.TypeVehicule?.Libelle</span>
                                <span class="info-item"><span class="oi oi-euro"></span> @vehicule.PrixParJour.ToString("C") / jour</span>
                                <span class="info-item"><span class="oi oi-dashboard"></span> @vehicule.Kilometrage.ToString("N0") km</span>
                            </p>
                            <span class="badge bg-success">Disponible</span>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary w-100" @onclick="() => ReserverVehicule(vehicule.Id)">
                                <span class="oi oi-check"></span> Réserver maintenant
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    /* Conteneur des cards */
    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col-md-4 {
        display: flex;
        flex: 0 0 33.333333%;
        max-width: 33.333333%;
        min-width: 33.333333%;
    }

    @@media (max-width: 768px) {
        .col-md-4 {
            flex: 0 0 100%;
            max-width: 100%;
            min-width: 100%;
        }
    }

    /* ========== VEHICLE CARDS PREMIUM ========== */
    .vehicle-card {
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        width: 100%;
        display: flex;
        flex-direction: column;
    }

        .vehicle-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 60px rgba(11, 26, 46, 0.2);
        }

    /* ========== IMAGES Premium ========== */
    .vehicle-image-container {
        position: relative;
        width: 100%;
        padding-top: 66.67%; /* Ratio 3:2 */
        overflow: hidden;
        background: linear-gradient(135deg, #0B1A2E 0%, #152238 100%);
    }

    .vehicle-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .vehicle-card:hover .vehicle-image {
        transform: scale(1.1);
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(180deg, transparent 0%, rgba(11, 26, 46, 0.8) 100%);
        opacity: 0;
        transition: opacity 0.4s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .vehicle-card:hover .image-overlay {
        opacity: 1;
    }

    .overlay-content {
        color: #C9A961;
        font-size: 3rem;
        transform: translateY(20px);
        transition: transform 0.4s;
    }

    .vehicle-card:hover .overlay-content {
        transform: translateY(0);
    }

    .no-image-fallback {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: rgba(201, 169, 97, 0.5);
    }

        .no-image-fallback .oi {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .no-image-fallback p {
            margin: 0;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

    /* ========== CARD BODY ========== */
    .vehicle-card .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 200px;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 1rem;
        min-height: 3rem;
    }

    .card-text {
        flex: 1;
    }

    /* ========== CARD FOOTER ========== */
    .vehicle-card .card-footer {
        padding: 1rem;
    }

        .vehicle-card .card-footer .btn {
            padding: 0.75rem 1rem;
        }

    /* ========== INFO ITEMS ========== */
    .info-item {
        display: block;
        margin-bottom: 0.75rem;
        color: rgba(11, 26, 46, 0.7);
        font-size: 0.95rem;
    }

        .info-item .oi {
            color: #C9A961;
            margin-right: 8px;
        }
</style>

@code {
    private List<Vehicule> tousVehicules;
    private List<Vehicule> vehiculesFiltres;
    private List<TypeVehicule> typesVehicules;
    private int? typeSelectionne;
    private decimal? prixMax;

    protected override async Task OnInitializedAsync()
    {
        var all = await VehiculeService.GetAllAsync();
        tousVehicules = all.Where(v => v.Disponible).ToList();
        vehiculesFiltres = tousVehicules;
        typesVehicules = await TypeVehiculeService.GetAllAsync();
    }

    private void FiltrerParType(ChangeEventArgs e)
    {
        typeSelectionne = string.IsNullOrEmpty(e.Value?.ToString()) ? null : int.Parse(e.Value.ToString());
        AppliquerFiltres();
        StateHasChanged();
    }

    private void AppliquerFiltres()
    {
        vehiculesFiltres = tousVehicules;

        if (typeSelectionne.HasValue)
        {
            vehiculesFiltres = vehiculesFiltres.Where(v => v.TypeVehiculeId == typeSelectionne.Value).ToList();
        }

        if (prixMax.HasValue)
        {
            vehiculesFiltres = vehiculesFiltres.Where(v => v.PrixParJour <= prixMax.Value).ToList();
        }
        
        StateHasChanged();
    }

    private void ReinitialiserFiltres()
    {
        typeSelectionne = null;
        prixMax = null;
        vehiculesFiltres = tousVehicules;
        StateHasChanged();
    }

    private void ReserverVehicule(int vehiculeId)
    {
        Navigation.NavigateTo($"/reserver/{vehiculeId}");
    }

    private string GetImagePath(string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath))
            return "/images/no-image.png";

        return $"/Images/{imagePath}";
    }
}