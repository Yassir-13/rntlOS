@page "/register"
@rendermode InteractiveServer
@using rntlOS.Core.Services
@using rntlOS.Core.Models
@using BCryptLib = BCrypt.Net.BCrypt
@inject ClientService ClientService
@inject NavigationManager Navigation

<PageTitle>Inscription - rntlOS</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6" style="min-width: 320px;">
            <div class="glass-panel p-4 p-md-5 mb-5">
                <div class="text-center mb-4">
                    <span class="oi oi-pencil" style="font-size: 3rem; color: var(--gold-primary);"></span>
                    <h3 class="text-gold mt-3">Devenir Membre</h3>
                    <p class="text-dim">Rejoignez le cercle exclusif rntlOS.</p>
                </div>

                @if (!string.IsNullOrEmpty(messageErreur))
                {
                    <div class="alert alert-danger">
                        <span class="oi oi-warning me-2"></span> @messageErreur
                    </div>
                }

                @if (!string.IsNullOrEmpty(messageSucces))
                {
                    <div class="alert alert-success">
                        <span class="oi oi-check me-2"></span> @messageSucces
                    </div>
                }

                <EditForm Model="@registerModel" OnValidSubmit="@HandleRegister">
                    <DataAnnotationsValidator />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-white">Nom</label>
                            <InputText class="form-control" @bind-Value="registerModel.Nom" placeholder="Votre nom" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-white">Prénom</label>
                            <InputText class="form-control" @bind-Value="registerModel.Prenom" placeholder="Votre prénom" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white">Email</label>
                        <InputText type="email" class="form-control" @bind-Value="registerModel.Email" placeholder="votre@email.com" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white">Téléphone</label>
                        <InputText class="form-control" @bind-Value="registerModel.Telephone" placeholder="+33 6 00 00 00 00" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white">Mot de passe</label>
                        <InputText type="password" class="form-control" @bind-Value="registerModel.Password" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-white">Confirmer le mot de passe</label>
                        <InputText type="password" class="form-control" @bind-Value="registerModel.ConfirmPassword" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3 btn-lg">
                        S'inscrire
                    </button>
                </EditForm>

                <div class="text-center mt-3">
                    <p class="text-dim mb-0">Déjà membre ?</p>
                    <a href="/login" class="text-gold text-decoration-none fw-bold">
                        Accéder à mon espace
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



@code {
    private RegisterModel registerModel = new();
    private string messageErreur = "";
    private string messageSucces = "";

    private async Task HandleRegister()
    {
        messageErreur = "";
        messageSucces = "";

        // Validation
        if (string.IsNullOrWhiteSpace(registerModel.Nom) ||
            string.IsNullOrWhiteSpace(registerModel.Prenom) ||
            string.IsNullOrWhiteSpace(registerModel.Email) ||
            string.IsNullOrWhiteSpace(registerModel.Password))
        {
            messageErreur = "Veuillez remplir tous les champs.";
            return;
        }

        if (registerModel.Password != registerModel.ConfirmPassword)
        {
            messageErreur = "Les mots de passe ne correspondent pas.";
            return;
        }

        if (registerModel.Password.Length < 6)
        {
            messageErreur = "Le mot de passe doit contenir au moins 6 caractères.";
            return;
        }

        // Vérifier si l'email existe déjà
        var clients = await ClientService.GetAllAsync();
        if (clients.Any(c => c.Email.ToLower() == registerModel.Email.ToLower()))
        {
            messageErreur = "Cet email est déjà utilisé.";
            return;
        }

        // Créer le client
        var client = new Client
        {
            Nom = registerModel.Nom,
            Prenom = registerModel.Prenom,
            Email = registerModel.Email.ToLower(),
            Telephone = registerModel.Telephone,
            PasswordHash = BCrypt.Net.BCrypt.HashPassword(registerModel.Password)
        };

        try
        {
            await ClientService.AddAsync(client);
            messageSucces = "Inscription réussie ! Redirection vers la connexion...";
            
            // Rediriger vers login après 2 secondes
            await Task.Delay(2000);
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            messageErreur = $"Erreur lors de l'inscription : {ex.Message}";
        }
    }

    public class RegisterModel
    {
        public string Nom { get; set; } = "";
        public string Prenom { get; set; } = "";
        public string Email { get; set; } = "";
        public string Telephone { get; set; } = "";
        public string Password { get; set; } = "";
        public string ConfirmPassword { get; set; } = "";
    }
}
